<header></header>
<h1>つぶやき一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>つぶやき内容</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細確認する', blog_path(blog.id) %></td>
    <td><%= link_to "編集する", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除する',  blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新規投稿', new_blog_path %>